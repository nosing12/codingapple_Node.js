      <h4>수정하기</h4>
      <input name="id" value="<%= result._id %>" style="display: none" />
      <input name="title" placeholder="<%= result.title%>" />
      <input name="content" placeholder="<%= result.content%>" />
      <button type="submit">전송</button>
    </form>
    <%- include("./modules/footer.ejs") %>
  </body>
</html>
